<div class="my-2">
  <h3 class="text-lg font-extrabold text-gray-900 py-2">Register for breaking news about <%= company.name %></h3>

  <form method="POST" action="<%= register_company_url(company.id) %>">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" />

    <input
      class="border-solid border-2 border-gray-600 rounded p-1"
      name="email"
      type="email"
      placeholder="email"
      required
    />
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-4 rounded" type="submit">Register</button>
  </form>
</div>